                                <VerticalStackLayout>
                                    <HorizontalStackLayout HorizontalOptions="Start">
                                        <Image Margin="5,0" Source="category.png"/>
                                        <Label  Text="{Binding ServiceType}" FontSize="18" FontAttributes="Bold" />

                                    </HorizontalStackLayout>

                                </VerticalStackLayout>

                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={x:RelativeSource AncestorType={x:Type viewModels:AddUpdateSalesPageViewModel}},Path=DisplayActionCommand}"
