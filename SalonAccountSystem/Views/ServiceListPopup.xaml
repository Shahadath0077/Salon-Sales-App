                                  TextColor="Black" BackgroundColor="WhiteSmoke" CornerRadius="0" 
                                  WidthRequest="330" HeightRequest="60" FontSize="18" FontAttributes="Bold" Clicked="Button_Clicked"/>


                            </ScrollView>
                        </HorizontalStackLayout>
                       



